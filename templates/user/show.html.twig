{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>Mon profil</h1>

    <table class="w3-table-all">
    <tbody>

            <tr>
                <th>Pseudo</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.name }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ user.firstName }}</td>
            </tr>
            <tr>
                <th>Téléphone</th>
                <td>{{ user.phoneNumber }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.emailAdress }}</td>
            </tr>
            <tr>
                <th>Administrateur</th>
                <td>{{ user.administrator ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ user.active ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('user_index') }}" class="w3-btn w3-red w3-round">back to list</a>

    <a href="{{ path('user_edit', {'id': user.id}) }}" class="w3-btn w3-red w3-round">Modifier</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
