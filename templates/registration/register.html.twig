{% extends 'layout.html.twig' %}

{% block title %} | Cr√©er un compte{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}


<div class="w3-container w3-padding-64 w3-margin">
    <h1 class="w3-padding-24 w3-margin">Register</h1>
    <div class="w3-row w3-row-padding">
        <div class="w3-col s4 w3-padding-24 w3-margin">
            {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.username) }}
            {{ form_row(registrationForm.name) }}
            {{ form_row(registrationForm.firstName) }}
            {{ form_row(registrationForm.emailAdress) }}
            {{ form_row(registrationForm.phoneNumber) }}
            {{ form_row(registrationForm.password) }}
        </div>
        <div class="w3-col s4 w3-padding-24 w3-margin">
            {{ form_row(registrationForm.administrator) }}
            {{ form_row(registrationForm.active) }}
            {{ form_row(registrationForm.roles) }}
            {{ form_row(registrationForm.campus) }}
            {{ form_row(registrationForm.save) }}
        </div>
        {{ form_end(registrationForm) }}
    </div>
</div>


{% endblock %}
